{
  "name": "powerdom",
  "version": "1.0.0",
  "description": "The low complexity and lightweight Single Page Application framework that you were needing, with all the fancy stuff that all the popular includes but without the hassle",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "sass": "node-sass --include-path node_modules/vital-css/dist/scss src/scss -o dist/css --output-style compressed",
    "build": "rollup --config --watch",
    "esdoc": "./node_modules/.bin/esdoc",
    "dev": "cd dist && php -S localhost:8000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://jarivas@github.com/jarivas/powerdom.git"
  },
  "keywords": [
    "spa"
  ],
  "author": "jarivas",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jarivas/powerdom/issues"
  },
  "homepage": "https://github.com/jarivas/powerdom#readme",
  "dependencies": {
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0"
  },
  "devDependencies": {
    "dialog-polyfill": "^0.5.0",
    "node-sass": "^4.11.0",
    "vital-css": "^2.2.1"
  }
}
